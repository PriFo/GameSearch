<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:drawingCacheQuality="high"
    android:fadingEdge="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/backEditProf"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="55dp"
                android:layout_height="58dp"
                android:backgroundTint="@color/main"
                android:visibility="visible"
                app:icon="?attr/actionModeCloseDrawable"
                app:iconTint="#000000"
                tools:ignore="SpeakableTextPresentCheck"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/textEditProf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:fontFamily="@font/oxanium"
                android:text="@string/edit_profile"
                android:textColor="#000000"
                android:textSize="34sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageAvatar"
                android:layout_width="131dp"
                android:layout_height="131dp"
                android:layout_gravity="center"
                android:adjustViewBounds="false"
                android:background="@drawable/circle_shape"
                android:clickable="false" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/editAvat"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0dp"
                    android:backgroundTint="@color/main"
                    android:backgroundTintMode="add"
                    android:fontFamily="@font/oxanium"
                    android:text="Edit avatar"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    app:cornerRadius="50dp"
                    app:strokeColor="#000000"
                    app:strokeWidth="1dp" />

                <Button
                    android:id="@+id/newAvatar"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0dp"
                    android:backgroundTint="@color/main"
                    android:backgroundTintMode="add"
                    android:fontFamily="@font/oxanium"
                    android:text="New avatar"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    app:cornerRadius="50dp"
                    app:strokeColor="#000000"
                    app:strokeWidth="1dp" />

                <Button
                    android:id="@+id/delAvatar"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0dp"
                    android:backgroundTint="@color/red"
                    android:backgroundTintMode="add"
                    android:fontFamily="@font/oxanium"
                    android:text="Delete Avatar"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    app:cornerRadius="50dp"
                    app:strokeColor="#000000"
                    app:strokeWidth="1dp" />
            </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/nicknameProf"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="15dp"
            android:autofillHints="@string/nickname_prof"
            android:background="@drawable/ic_search_bar"
            android:drawableTint="@color/black"
            android:fontFamily="@font/oxanium"
            android:hint="@string/nickname_prof"
            android:inputType="text"
            android:padding="24dp"
            android:singleLine="true"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:visibility="visible" />

        <Button
            android:id="@+id/changeLogin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:backgroundTint="@color/main"
            android:backgroundTintMode="add"
            android:fontFamily="@font/oxanium"
            android:text="Change login"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="19sp"
            app:cornerRadius="50dp"
            app:strokeColor="#000000"
            app:strokeWidth="1dp" />

    </LinearLayout>

    <Button
        android:id="@+id/exitBut"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/red"
        android:backgroundTintMode="add"
        android:fontFamily="@font/oxanium"
        android:text="Exit"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>