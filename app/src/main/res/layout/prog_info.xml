<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/backProg"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="55dp"
                android:layout_height="58dp"
                android:layout_marginEnd="12dp"
                android:backgroundTint="@color/main"
                android:visibility="visible"
                app:icon="?attr/actionModeCloseDrawable"
                app:iconTint="#000000"
                tools:ignore="SpeakableTextPresentCheck"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/textBackLang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:fontFamily="@font/oxanium"
                android:text="About The Program"
                android:textSize="24sp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/oxanium"
            android:gravity="center"
            android:text="Version: 1.0"
            android:textSize="24sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textDeveloper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/oxanium"
            android:gravity="center"
            android:text="Developer: Skrebnev Aleksey"
            android:textSize="24sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/oxanium"
            android:gravity="center"
            android:text="@string/prog_info"
            android:textSize="26sp"
            android:textColor="@color/black" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>