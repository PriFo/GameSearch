<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:elevation="20dp"
        android:orientation="vertical"
        android:translationZ="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/back"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="55dp"
                android:layout_height="58dp"
                android:layout_marginEnd="12dp"
                android:backgroundTint="@color/main"
                android:visibility="visible"
                app:cornerRadius="0dp"
                app:icon="?attr/homeAsUpIndicator"
                app:iconTint="#000000"
                app:iconPadding="0dp"
                tools:ignore="SpeakableTextPresentCheck"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/gameNameNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/oxanium"
                android:text="Filtres"
                android:textSize="24sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/textGenre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/oxanium"
            android:text="Genre"
            android:textSize="30sp"
            android:textColor="@color/black" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="141dp"
            android:layout_marginBottom="5dp">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/oxanium"
                android:text="Action"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="TouchTargetSizeCheck"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/radioHorror"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/oxanium"
                android:text="Horror"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="TouchTargetSizeCheck"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/radioRPG"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/oxanium"
                android:text="RPG"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="TouchTargetSizeCheck"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/radioRacing"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/oxanium"
                android:text="Racing"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="TouchTargetSizeCheck"
                android:textColor="@color/black" />

        </RadioGroup>

        <TextView
            android:id="@+id/textSortingBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/oxanium"
            android:text="Sorting by"
            android:textSize="30sp"
            android:textColor="@color/black" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="238dp">

            <RadioButton
                android:id="@+id/radioPriceInc"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/oxanium"
                android:text="Price increase"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/radioPriceDec"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/oxanium"
                android:text="Price decrease"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/radioPopFirst"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/oxanium"
                android:text="Popular first"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/radioUnpopFirst"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/oxanium"
                android:text="Unpopular first"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/radioRating"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/oxanium"
                android:text="Rating"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/radioFromAToZ"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/oxanium"
                android:text="From A to Z"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck"
                android:textColor="@color/black" />
        </RadioGroup>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>